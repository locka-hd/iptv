<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listview_bg">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4px"
        android:layout_marginLeft="4px"
        android:layout_marginRight="4px"
        android:layout_marginTop="4px"
        android:background="@color/colorBlack"
        android:gravity="center"
        android:text="ALL Channels"
        android:textColor="@color/colorWhite"
        android:textSize="25sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_title"
        android:layout_marginBottom="4px"
        android:layout_marginLeft="4px"
        android:layout_marginRight="4px"
        android:background="@color/colorBlack">

        <ListView
            android:id="@+id/lv_channel_list"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="2dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scrollbarFadeDuration="0"
            android:scrollbars="vertical"></ListView>

        <RelativeLayout
            android:id="@+id/rl_key_guide"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="45px">

            <ImageButton
                android:id="@+id/ib_red"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:background="@mipmap/icon_red_button" />

            <TextView
                android:id="@+id/tv_red"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ib_red"
                android:paddingLeft="15dp"
                android:text="@string/channels_categories"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/ib_green"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/tv_red"
                android:background="@mipmap/icon_green_button" />

            <TextView
                android:id="@+id/tv_green"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_toEndOf="@+id/ib_green"
                android:text="@string/channels_Login_info"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/ib_yellow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/icon_yellot_button"
                android:layout_alignTop="@+id/tv_yellow"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tv_yellow"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_below="@id/ib_red"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/ib_yellow"
                android:text="@string/channels_search"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/ib_blue"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignStart="@+id/ib_green"
                android:layout_below="@+id/ib_red"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tv_yellow"
                android:background="@mipmap/icon_blue_button" />

            <TextView
                android:id="@+id/tv_blue"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_below="@+id/ib_green"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/ib_blue"
                android:text="@string/channels_add_fav"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/ib_fav"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_below="@+id/ib_yellow"
                android:layout_marginTop="15dp"
                android:background="@mipmap/icon_fav"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ib_yellow"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/ib_fav"
                android:text="@string/channels_fav_list"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/ib_update"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignStart="@+id/ib_green"
                android:layout_below="@id/ib_blue"
                android:layout_marginTop="15dp"
                android:background="@mipmap/icon_epg"
                android:text="EPG"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_update"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_below="@+id/ib_yellow"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/ib_update"
                android:text="@string/channels_update_channels_list"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>